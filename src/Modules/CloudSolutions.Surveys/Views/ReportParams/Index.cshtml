@using CloudSolutions.Surveys.Models
@model IEnumerable<ReportParameterSettings>
<div class="card text-bg-theme mb-3 position-sticky action-bar">
    <div class="card-body">
        <div class="row gx-3">
            <div class="col"></div>
            <div class="col-auto">
                <a class="btn btn-secondary" asp-action="Create">@T["Add Settings"]</a>
            </div>
        </div>
    </div>
</div>
@if (!Model.Any())
{
    <div class="alert alert-warning text-center" role="alert">
        @T["No settings available."]
    </div>

    return;
}
<ul class="list-group">
    @foreach (var item in Model)
    {
        <li class="list-group-item list-group-item-action">

            <div class="row">
                <div class="col-lg col-12">
                    <div class="summary d-flex flex-column flex-md-row ">
                        <div class="me-2">
                            <a asp-action="Edit" asp-route-id="@item.Id">@item.Title</a>
                        </div>

                        <div class="me-2">
                            <span class="ms-3 badge ta-badge font-weight-normal" title="@T["Link to access this settings"]">@Url.Action("Display", new { item.Id })</span>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(item.Description))
                    {
                        <p class="mb-0">@item.Description</p>
                    }
                </div>
                <div class="col-lg-auto col-12 d-flex justify-content-end">
                    <div class="actions">

                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id"><span>@T["Edit"]</span></a>

                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id" data-url-af="RemoveUrl UnsafeUrl" data-title="@T["Delete"]" data-message="@T["Are you sure you want to delete this settings?"]" data-ok-text="@T["Ok"]" data-cancel-text="@T["Cancel"]">@T["Delete"]</a>

                    </div>
                </div>
            </div>
        </li>
    }
</ul>